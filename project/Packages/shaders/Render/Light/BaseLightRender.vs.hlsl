PSInput main(VSInput input, uint instanceId : SV_InstanceID) {

	PSInput output = (PSInput)0;
	
	output.position   = mul(gTransform[instanceId].Transform(input.position), kViewProj);
	output.instanceId = instanceId;
	
	return output;
	
}
