[numthreads(_NUM_THREAD_X, _NUM_THREAD_Y, 1)]
void main(uint3 dispatchThreadId : SV_DispatchThreadID) {
	
	uint2 index = dispatchThreadId.xy;
	uint2 size  = gConfig.size;
	
	if (any(index >= size)) {
		return; //!< texture size is smaller than thread group size.
	}
	
	
	
}
