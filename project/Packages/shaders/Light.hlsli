////////////////////////////////////////////////////////////////////////////////////////////
// common methods
////////////////////////////////////////////////////////////////////////////////////////////

float CalculateDiffuseLambert(float3 n, float3 l) {
	return saturate(dot(n, l));
}

float CalculateDiffuseHalfLambert(float3 n, float3 l) {
	return saturate(dot(n, l) * 0.5f + 0.5f);
}
